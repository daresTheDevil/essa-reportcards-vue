// Fonts
// ============================================================
$body-font-family = BlinkMacSystemFont, -apple-system, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif
$font-size = 16px
// Headings
// ============================================================
$heading-font-family := $body-font-family
$headings := {
  h1: { size: 7rem, weight: 800, line-height: 1, letter-spacing: normal, font-family: $body-font-family },
  h2: { size: 4rem, weight: 700, line-height: 1.35, letter-spacing: normal, font-family: $body-font-family },
  h3: { size: 3rem, weight: 400, line-height: 48px, letter-spacing: normal, font-family: $body-font-family },
  h4: { size: 2.5rem, weight: 400, line-height: 40px, letter-spacing: normal, font-family: $body-font-family },
  h5: { size: 2rem, weight: 400, line-height: 32px, letter-spacing: normal, font-family: $body-font-family },
  h6: { size: 1.5rem, weight: 500, line-height: 1, letter-spacing: .02em, font-family: $body-font-family },
  subheading: { size: 1.25rem, weight: 400 },
  body-2: { size: 1rem, weight: 500 },
  body-1: { size: 1rem, weight: 400 },
  caption: { size: .75rem, weight: 400 },
  button: { size: 1rem, weight: 500 }
}

@import '~vuetify/src/stylus/main'
